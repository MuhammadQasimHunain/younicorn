
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="hero" class="d-flex align-items-center login">
    <div class="container position-relative text-center text-lg-left" data-aos="zoom-in" data-aos-delay="100">
        <div class="row px-3">
            <div class="col-md-3">

            </div>
            <div class="col-md-6 col-lg-6 block block-rounded mt-5 mb-0">

                <div class="row justify-content-center">
                    <div class="col-md-12 col-lg-12 p-lg-5 px-4 py-5">
                        <div class="sign-form-logo text-center mb-5">
                            <img src="@Url.Content("~/img/logo.png")" alt="" class="img-fluid">
                        </div>
                        <h4 class="text-pumpkin text-center mb-5">
                            Welcome to Younicorn
                        </h4>
                        <form class="px-5 py-3">
                            <div class="form-group">
                                <div class="row align-items-center mb-2">
                                    <div class="col-12 col-sm-12">
                                        <label class="mb-1" for="email">Users name or Email</label>
                                        <input id="txtusername" required type="text" class="form-control border-top-0 border-right-0 border-left-0 rounded-0 p-0" placeholder="">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row align-items-center mb-2">
                                    <div class="col-12 col-sm-12">
                                        <label class="mb-1" for="email">Password</label>
                                        <input id="txtpwd" required type="password" class="form-control border-top-0 border-right-0 border-left-0 rounded-0 p-0" placeholder="">
                                    </div>
                                </div>
                            </div>
                            <div class="row text-right">
                                <div class="col-12 col-sm-12">
                                    <a class="small" href="#">Forgot password?</a>
                                </div>
                            </div>

                            <div class="text-center mt-4">
                                <a href="#" class="sign-in btn btn-pumpkin btn-rounded text-uppercase font-weight-bold w-50">
                                    Sign
                                    In
                                </a>
                            </div>
                            <div class="text-center mt-5">
                                <p>New to Younicorn? &nbsp;<a href="@Url.ActionLink("SignUp","Home")">Create an account</a></p>
                            </div>
                            <div class="text-center mt-5">
                                <p id="p-Msg" style="display:none;" class="alert alert-secondary small mt-3 mb-0 text-success"></p>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>



    </div>
</section><!-- End Login -->
@section Scripts {
    <script src="~/js/login.js" asp-append-version="true"></script>
}
