                        <div class="col-sm-8">
                            @Html.TextBoxFor(a => a.Offerrating, new { @class = "form-control numerictext" })
                            @Html.ValidationMessageFor(a => a.Offerrating)
                        </div>
                    </div>
                </div>
                <div class="form-group row checkboxlist text-center">
                    <div class="col-sm-1">
                        <label for="Adsl">ADSL</label>
                        @Html.CheckBoxFor(a => a.Adsl, new { @class = "form-control" })
                        @Html.ValidationMessageFor(a => a.Offerrating)
                    </div>
                    <div class="col-sm-1">
                        <label for="Vdsl">VDSL</label>
                        @Html.CheckBoxFor(a => a.Vdsl, new { @class = "form-control" })
                        @Html.ValidationMessageFor(a => a.Offerrating)
                    </div>
                    <div class="col-sm-1">
                        <label for="Fibre">Fibre</label>
                        @Html.CheckBoxFor(a => a.Fibre, new { @class = "form-control" })
                        @Html.ValidationMessageFor(a => a.Fibre)
                    </div>
                    <div class="col-sm-1">
                        <label for="Fibreplus">Fibreplus</label>
                        @Html.CheckBoxFor(a => a.Fibreplus, new { @class = "form-control" })
                        @Html.ValidationMessageFor(a => a.Fibreplus)
                    </div>
                </div>

                <div class="d-flex justify-content-center">
                    <button type="submit" value="Save" class="mt-18 btn btn-primary float-right btn-dark-tangerine btn-rounded text-uppercase font-weight-bold w-50">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>}