@model YounicornApp.Web.ApiModels.IspOfferItemDTO
@{ Layout = ""; }

@using (Html.BeginForm("Delete", "IspOffer", FormMethod.Post, new { id = "popupForm" }))
{
@Html.HiddenFor(a => a.Id)

                <div class="container">
                    <div class="row">
                        <div class="col-md-10 mx-auto">
                            <form>
                                <div class="form-group row">
                                    <div class="col-sm-6">
                                        <label>Isp Id</label>
                                        <p>@Model.Ispid</p>
                                    </div>
                                    @if (Model != null && Model.Id > 0)
                                    {
                    <div class="col-sm-6">
                        <label>Offer Id</label>
                        <p>@Model.Id</p>
                    </div>}
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6">
                                        <label>Offer Name</label>
                                        <p>@Model.Offername</p>
                                    </div>
                                    <div class="col-sm-6">
                                        <label>Display Name</label>
                                        <p>@Model.Displayname</p>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6">
                                        <label>Speed</label>
                                        <p>@Model.Speed</p>
                                    </div>
                                    <div class="col-sm-6">
                                        <label>Data</label>
                                        <p>@Model.Data</p>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6">
                                        <label>Price month</label>
                                        <p>@Model.Pricemonth</p>
                                    </div>
                                    <div class="col-sm-6">
                                        <label>Price annual</label>
                                        <p>@Model.Priceannual</p>
                                    </div>
                                </div>

                                <div class="d-flex justify-content-center">
                                    <button type="submit" value="Delete" class="btn btn-primary px-4 float-right btn-dark-tangerine btn-rounded">Delete</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>}